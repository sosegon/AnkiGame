<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_ankimal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_ankimal"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />

    <LinearLayout
        style="@style/FooterButtonLayout"
        android:id="@+id/ll_select"
        android:background="?attr/goodButtonRef"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/imv_ankimal"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            style="@style/GoodButtonTimeStyle"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/select"/>

        <TextSwitcher
            style="@style/GoodButtonTimeStyle"
            android:id="@+id/lbl_coins_select"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal">

            <TextView
                style="@style/GoodButtonTimeStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <TextView
                style="@style/GoodButtonTimeStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </TextSwitcher>
    </LinearLayout>
</RelativeLayout>